{% include "navbar-light.njk" %}

<header class="my-6">
  <div class="page-header">
    <div class="container">
      <div class="col-lg-8 text-center mx-auto my-auto">
        <h1>Blog</h1>
        <p class="lead">Weâ€™re constantly trying to express ourselves and actualize our dreams. If you have the opportunity to play this game</p>
      </div>
    </div>
  </div>
</header>

<main class="container mb-8">
  <ul class="row g-4 post-list">
    {% for post in prismicData.blogposts %}
      <li class="col-lg-4 d-flex align-items-stretch post-list__item">
        <div class="card shadow-lg">
          <div class="card-header p-0 mx-3 mt-3">
            <div class="d-block blur-shadow-image shadow">
              <a href="/blog/{{ post.uid | slug }}">
                {% Image post.data.article_image.url,
                "image" %}
              </a>
            </div>
          </div>

          <div class="card-body d-flex flex-column">
            <a href="/blog/{{ post.uid | slug }}">
              <h5 class="mt-3">{{post.data.title | prismicText}}</h5>
            </a>

            <p class="mt-3">
              {{ post.data.body | prismicHtml | excerpt }}
            </p>

            <div class="mt-auto">
              <small>{{ post.data.date | prismicDate | postDate }}</small>
            </div>
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
</main>

